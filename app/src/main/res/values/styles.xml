<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MenuTextStyle" parent="TextAppearance.AppCompat.Menu">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/ternary_color</item>
    </style>

    <style name="MenuTextStyle.Active" parent="TextAppearance.AppCompat.Menu">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="HeadingText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="SubHeadingText" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="BodyText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>



</resources>